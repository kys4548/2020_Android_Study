<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:text="@string/myname"
            android:layout_width="match_parent"
            android:layout_height="264dp" android:id="@+id/textView" android:textColor="#26699E"
            android:textSize="50sp" android:textStyle="bold" android:lineSpacingExtra="10sp"/>
    <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"/>
    <CheckBox
            android:text="들었음"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox" android:checked="true"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">
        <RadioButton
                android:text="남자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton"/>
        <RadioButton
                android:text="여자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_marginLeft="10dp"/>
    </RadioGroup>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/imageView" android:adjustViewBounds="false" android:scaleType="fitCenter"/>
</LinearLayout>